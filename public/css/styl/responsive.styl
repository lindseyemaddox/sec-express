
.full
  display: block

  @media screen and (max-width: 1000px)
    display: none

.mobile
  display: none

  @media screen and (max-width: 1000px)
    display: block

@media screen and (max-width: 1100px)
  html
    font-size: 15px

@media screen and (max-width: 1000px)
  html
    font-size: 14px

@media screen and (max-width: 900px)
  html
    font-size: 13px

@media screen and (max-width: 500px)
  .six
    display: none

  .flex
    display: block
    margin-bottom: 30px

    &:last-child
      margin-bottom: 0

    .three
      margin-bottom: 0



@media screen and (max-height: 600px)
  .wrapper .main aside
    padding-top: 80px

  [class^="icon-"], [class*=" icon-"]
    padding-bottom: 8vh

@media screen and (max-height: 500px)

  .wrapper .main aside
    padding-top: 20px

    img
      opacity: 0

@media screen and (max-height: 400px)
  [class^="icon-"], [class*=" icon-"]
    padding-bottom: 5vh


body
  scroll-behavior: smooth

.overlay
  background-color: $darkest
  bottom: 0
  opacity: .7
  position: fixed
  top: 0
  width: 100vw
  z-index: -3

.background-video
  margin: 0 -11vw
  // opacity: .25
  overflow-x: hidden
  position: fixed
  width: 122vw
  z-index: -4

  @media screen and (max-width: 1500px)
    width: 130vw

  @media screen and (max-width: 1400px)
    width: 140vw

  @media screen and (max-width: 1300px)
    margin-left: -30vw
    width: 152vw

  @media screen and (max-width: 1200px)
    margin-left: -40vw
    width: 165vw

  @media screen and (max-width: 1100px)
    margin-left: -50vw
    width: 185vw

  @media screen and (max-width: 1000px)
    margin-left: -70vw
    width: 205vw

  @media screen and (max-width: 900px)
    margin-left: -90vw
    width: 235vw

  @media screen and (max-width: 800px)
    margin-left: -110vw
    width: 265vw

  @media screen and (max-width: 700px)
    background: url(http://zackmaddox.com/ngu/images/video.jpg) no-repeat center center transparent
    height: 100%
    opacity: .6
    margin-left: 0

    video
      display: none

  video
    width: 100%

.wrapper
  height: 100vh
  width: 100vw

  .main
    height: 100%

    aside
      height: 100vh
      padding: $top-margin 2% 0
      position: fixed
      top: 0
      width: $sidebar-width
      z-index: 999

      @media screen and (max-width: 1400px)
        width: 330px

      @media screen and (max-width: 1200px)
        padding-top: 130px

      @media screen and (max-width: 1000px)
        width: 26px

        img
          opacity: 0

    section
      padding-left: $sidebar-width

      @media screen and (max-width: 1400px)
        padding-left: 330px

      @media screen and (max-width: 1200px)
        padding-left: 280px

      @media screen and (max-width: 1000px)
        padding-left: 53px

.grid
  margin-left: 40px
  max-width: 930px

  @media screen and (max-width: 1400px)
  	max-width: 890px

.panes
  transition: 800ms

  @media screen and (max-width: 1300px)
    padding-right: 80px

  @media screen and (max-width: 1300px)
    padding-right: 40px

.pane
  height: 100vh
  padding-top: 220px
  position: relative

  @media screen and (max-width: 1500px)
    padding-top: 130px

  @media screen and (max-width: 1000px)
    height: auto

  .next
    bottom: 300px

    @media screen and (max-width: 1500px)
      bottom: 20vh

  &#intro
    padding-top: 0
    margin-top: -84px

    .next
      bottom: 8vh

  h2.mobile
    color: $white
    font-size: 2em
    letter-spacing: 7px
    margin-bottom: 18px
    primary-type($sans, $light)
    text-transform: uppercase

    @media screen and (max-width: 1300px)
      display: block

.flex
  display: flex

  .three
    flex: 1
    margin-bottom: 60px
    padding-right: 10px

    &:last-child
      padding-right: 0

    @media screen and (max-width: 1000px)
      margin-bottom: 30px
